  "type": "commonjs",
  "engines": {
    "node": ">=14"
  },
  "bugs": {
    "url": "https://github.com/bodangren/curriculum-mcp/issues"
  },
  "homepage": "https://github.com/bodangren/curriculum-mcp#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.0",
    "@types/node": "^24.1.0",
    "typescript": "^5.8.3"
